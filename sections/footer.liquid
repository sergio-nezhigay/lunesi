<script>
(function() {
    'use strict';
    
    // –í–ê–ñ–õ–ò–í–û: –ó–∞–º—ñ–Ω—ñ—Ç—å —Ü–µ–π API –∫–ª—é—á –Ω–∞ –≤–∞—à —Ä–µ–∞–ª—å–Ω–∏–π
    const OMNISEND_API_KEY = '66b4f08d3245832d9dfc8e4c-pGw52OhTA5rgmbd7iyaBEfnhHqwMJ317fyvHhAqsumBn1H1gES';
    
    function showMessage(type, text) {
        const newsletterForm = document.getElementById('CustomFooterNewsletter');
        if (!newsletterForm) return;
        
        // –í–∏–¥–∞–ª—è—î–º–æ —Å—Ç–∞—Ä—ñ –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è
        const existingMessages = newsletterForm.querySelectorAll('.form__message');
        existingMessages.forEach(msg => msg.remove());
        
        const messageDiv = document.createElement('div');
        messageDiv.className = `form__message ${type}`;
        
        let iconSvg = '';
        if (type === 'success-message') {
            iconSvg = `<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10S15.523 0 10 0zm-1.5 15l-5-5 1.41-1.41L8.5 12.17l6.59-6.59L16.5 7l-8 8z" fill="#28a745"/>
            </svg>`;
        } else if (type === 'errors') {
            iconSvg = `<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10S15.523 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="#dc3545"/>
            </svg>`;
        } else if (type === 'warning') {
            iconSvg = `<svg width="18" height="18" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10S15.523 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="#856404"/>
            </svg>`;
        }
        
        messageDiv.innerHTML = iconSvg + text;
        
        const fieldDiv = newsletterForm.querySelector('.field');
        fieldDiv.insertAdjacentElement('afterend', messageDiv);
        
        // –ê–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ –ø—Ä–∏—Ö–æ–≤—É—î–º–æ —á–µ—Ä–µ–∑ 5 —Å–µ–∫—É–Ω–¥
        setTimeout(() => {
            if (messageDiv && messageDiv.parentNode) {
                messageDiv.remove();
            }
        }, 5000);
    }
    
    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email) && email.length <= 100;
    }
    
    async function getExistingContact(email) {
        try {
            const res = await fetch(`https://api.omnisend.com/v3/contacts?email=${encodeURIComponent(email)}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'X-API-Key': OMNISEND_API_KEY
                }
            });
            
            if (res.ok) {
                const data = await res.json();
                if (data.contacts && data.contacts.length > 0) {
                    return data.contacts[0];
                }
            }
        } catch (e) {
            console.error('Error checking existing contact:', e);
        }
        return null;
    }
    
    async function sendToOmnisend(email) {
        console.log('üöÄ Sending to Omnisend via API:', email);
        
        if (!isValidEmail(email)) {
            showMessage('errors', 'Please enter a valid email address');
            return false;
        }
        
        try {
            // –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ —á–∏ —ñ—Å–Ω—É—î –∫–æ–Ω—Ç–∞–∫—Ç
            const existingContact = await getExistingContact(email);
            
            const customProperties = {
                newsletter_source: 'footer',
                footer_signup_date: new Date().toISOString(),
                subscription_source: 'website_footer'
            };
            
            let response;
            
            if (existingContact) {
                console.log('üìù Updating existing contact with futer tag');
                
                // –û–Ω–æ–≤–ª—é—î–º–æ —ñ—Å–Ω—É—é—á–∏–π –∫–æ–Ω—Ç–∞–∫—Ç —ñ –¥–æ–¥–∞—î–º–æ —Ç–µ–≥ "futer"
                response = await fetch(`https://api.omnisend.com/v3/contacts/${existingContact.contactID}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': OMNISEND_API_KEY
                    },
                    body: JSON.stringify({
                        tags: ['futer', 'newsletter'],
                        customProperties: customProperties
                    })
                });
            } else {
                console.log('‚ú® Creating new contact with futer tag');
                
                // –°—Ç–≤–æ—Ä—é—î–º–æ –Ω–æ–≤–∏–π –∫–æ–Ω—Ç–∞–∫—Ç –∑ —Ç–µ–≥–æ–º "futer"
                response = await fetch('https://api.omnisend.com/v3/contacts', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': OMNISEND_API_KEY
                    },
                    body: JSON.stringify({
                        email: email,
                        status: 'subscribed',
                        statusDate: new Date().toISOString(),
                        tags: ['futer', 'newsletter'],
                        customProperties: customProperties
                    })
                });
            }
            
            if (response.ok) {
                const result = await response.json();
                console.log('‚úÖ SUCCESS! Contact processed:', result);
                
                // –î–æ–¥–∞—Ç–∫–æ–≤–æ –≤—ñ–¥–ø—Ä–∞–≤–ª—è—î–º–æ –ø–æ–¥—ñ—é
                try {
                    await fetch('https://api.omnisend.com/v3/events', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-API-Key': OMNISEND_API_KEY
                        },
                        body: JSON.stringify({
                            email: email,
                            eventName: 'footer_newsletter_signup',
                            fields: {
                                source: 'footer',
                                signup_date: new Date().toISOString()
                            }
                        })
                    });
                    console.log('üìä Event sent successfully');
                } catch (eventError) {
                    console.warn('Event sending failed:', eventError);
                }
                
                showMessage('success-message', 'Successfully subscribed! Thank you for joining our newsletter.');
                return true;
            } else {
                const errorText = await response.text();
                console.error('‚ùå API Error:', response.status, errorText);
                showMessage('errors', 'Unable to subscribe. Please try again later.');
                return false;
            }
            
        } catch (error) {
            console.error('‚ùå Network Error:', error);
            showMessage('errors', 'Connection error. Please check your internet and try again.');
            return false;
        }
    }
    
    function initCustomFooterNewsletter() {
        const form = document.getElementById('CustomFooterNewsletter');
        const privacyCheckbox = document.getElementById('custom-privacy-agreement');
        const submitButton = form?.querySelector('button[type="submit"]');
        
        if (!form) {
            console.log('Custom footer newsletter form not found');
            return;
        }
        
        console.log('üéØ Custom footer newsletter form initialized');
        

        if (privacyCheckbox && submitButton) {
            submitButton.disabled = true;
            
            privacyCheckbox.addEventListener('change', function() {
                submitButton.disabled = !this.checked;
            });
        }
        

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            

            if (privacyCheckbox && !privacyCheckbox.checked) {
                showMessage('warning', '–ë—É–¥—å –ª–∞—Å–∫–∞, –ø—ñ–¥—Ç–≤–µ—Ä–¥—ñ—Ç—å –∑–≥–æ–¥—É –∑ Privacy Policy');
                return;
            }
            
            const emailInput = this.querySelector('input[type="email"]');
            const email = emailInput?.value?.trim();
            
            if (!email) {
                showMessage('errors', 'Please enter your email address');
                return;
            }
            
            const originalButtonText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="footer-newsletter-spinner"></span>Sending...';
            submitButton.disabled = true;
            emailInput.disabled = true;
            
            try {
                const success = await sendToOmnisend(email);
                
                if (success) {
                    emailInput.value = '';
                    if (privacyCheckbox) {
                        privacyCheckbox.checked = false;
                    }
                }
            } finally {
                submitButton.innerHTML = originalButtonText;
                submitButton.disabled = privacyCheckbox ? !privacyCheckbox.checked : false;
                emailInput.disabled = false;
            }
        });
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCustomFooterNewsletter);
    } else {
        initCustomFooterNewsletter();
    }
    
    console.log('üöÄ Custom footer newsletter script loaded');
})();
</script>

