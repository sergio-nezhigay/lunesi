document.addEventListener('DOMContentLoaded', () => {
  const btn = document.querySelector('.footer .field__button.button');
  if (!btn) return;
  
  let raf1, raf2, exitTimeout;
  
  function getDir(e) {
    const r = btn.getBoundingClientRect();
    const x = e.clientX - (r.left + r.width/2);
    const y = e.clientY - (r.top + r.height/2);
    return Math.abs(x) > Math.abs(y)
      ? (x > 0 ? 'right' : 'left')
      : (y > 0 ? 'bottom' : 'top');
  }
  
  btn.addEventListener('mouseenter', e => {
    cancelAnimationFrame(raf1);
    cancelAnimationFrame(raf2);
    clearTimeout(exitTimeout);
    btn.classList.remove('exit-top','exit-right','exit-bottom','exit-left','exit-complete','hover-active','from-top','from-right','from-bottom','from-left');
    const dir = getDir(e);
    btn.classList.add(`from-${dir}`);
    raf1 = requestAnimationFrame(() => {
      raf2 = requestAnimationFrame(() => {
        btn.classList.add('hover-active');
        btn.classList.remove(`from-${dir}`);
      });
    });
  });
  
  btn.addEventListener('mouseleave', e => {
    cancelAnimationFrame(raf1);
    cancelAnimationFrame(raf2);
    clearTimeout(exitTimeout);
    btn.classList.remove('hover-active','from-top','from-right','from-bottom','from-left');
    const dir = getDir(e);
    btn.classList.add(`exit-${dir}`);
    exitTimeout = setTimeout(() => {
      btn.classList.remove(`exit-${dir}`);
      btn.classList.add('exit-complete');
    }, 300);
  });
});

document.addEventListener('DOMContentLoaded', function() {
  function handleNewsletterAccordion() {
    const newsletterAccordion = document.querySelector('.footer-block--newsletter details');

    if (newsletterAccordion) {
      const isMobile = window.innerWidth <= 750;
      if (isMobile) {
        newsletterAccordion.setAttribute('open', '');
        newsletterAccordion.closest('footer-accordion').classList.add('mobile-open');
      } else {
        newsletterAccordion.setAttribute('open', '');
        newsletterAccordion.closest('footer-accordion').classList.remove('mobile-open');
      }
    }
  }

  handleNewsletterAccordion();

  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(handleNewsletterAccordion, 250);
  });

  window.addEventListener('orientationchange', function() {
    setTimeout(handleNewsletterAccordion, 100);
  });

  let scrollTimer;
  window.addEventListener('scroll', function() {
    clearTimeout(scrollTimer);
    scrollTimer = setTimeout(function() {
      if (window.innerWidth <= 750) {
        const newsletterAccordion = document.querySelector('.footer-block--newsletter details');
        if (newsletterAccordion && !newsletterAccordion.hasAttribute('open')) {
          newsletterAccordion.setAttribute('open', '');
        }
      }
    }, 200);
  });
});
</script>

