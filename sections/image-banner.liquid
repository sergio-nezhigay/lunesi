{%- liquid
  if section.settings.image_behavior == 'ambient'
    assign half_width = '60vw'
    assign full_width = '120vw'
    assign stacked_sizes = '(min-width: 750px) 60vw, 120vw'
    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 4680'
  else
    assign half_width = '50vw'
    assign full_width = '100vw'
    assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
    assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
  endif

  assign has_first_media = false
  assign has_second_media = false
  
  if section.settings.video != blank or section.settings.image != blank
    assign has_first_media = true
  endif
  
  if section.settings.video_2 != blank or section.settings.image_2 != blank
    assign has_second_media = true
  endif
-%}

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full-width{% endif %}">
    <div id="Banner-{{ section.id }}" class="banner{% if section.settings.stack_images_on_mobile and has_first_media and has_second_media %} banner--stacked{% endif %}{% if section.settings.show_text_box %} banner--container{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.settings.mobile_text_background_enabled and section.settings.show_text_below %} banner--mobile-text-bg{% endif %}">
      
      {%- comment -%} First media (video or image) {%- endcomment -%}
      {%- if has_first_media -%}
        <div class="banner__media{% if has_second_media %} banner__media-half{% endif %}">
          <use-animate data-animate="zoom-fade" class="media-wrapper">
            <div class="image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
              
              {%- if section.settings.video != blank -%}
                {%- comment -%} Display video if available {%- endcomment -%}
                <video 
                  class="media__video"
                  autoplay 
                  muted 
                  loop 
                  playsinline
                  {% if section.settings.video_controls %}controls{% endif %}
                  style="width: 100%; height: 100%; object-fit: cover; object-position: {{ section.settings.image_position }};"
                >
                  <source src="{{ section.settings.video.sources[1].url }}" type="{{ section.settings.video.sources[1].mime_type }}">
                  <source src="{{ section.settings.video.sources[0].url }}" type="{{ section.settings.video.sources[0].mime_type }}">
                  {% comment %} Fallback image if video doesn't load {% endcomment %}
                  {%- if section.settings.image != blank -%}
                    {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'image-fit', style: 'width: 100%; height: 100%; object-fit: cover;' }}
                  {%- endif -%}
                </video>
                
              {%- elsif section.settings.image != blank -%}
                {%- comment -%} Display image if no video {%- endcomment -%}
                {%-liquid
                  assign image = section.settings.image
                  assign image_class = 'image-fit'
                  if has_second_media
                    assign image_class = image_class | append: ' banner__media-image-half'
                  endif
                  if has_second_media and section.settings.stack_images_on_mobile
                    assign sizes = stacked_sizes
                  elsif has_second_media
                    assign sizes = half_width
                  else
                    assign sizes = full_width
                  endif

                  echo image | image_url: width: 1500 | image_tag: loading: 'lazy', class: image_class, sizes: sizes, widths: widths, is: 'lazy-image'
                -%}
              {%- endif -%}
            </div>
          </use-animate>
        </div>
        
      {%- elsif has_second_media == false -%}
        {%- comment -%} Show placeholder if no media at all {%- endcomment -%}
        <div class="banner__media">
          <use-animate data-animate="zoom-fade" class="media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder image-animate' }}
          </use-animate>
        </div>
      {%- endif -%}
      
      {%- comment -%} Second media (video or image) {%- endcomment -%}
      {%- if has_second_media -%}
        <div class="banner__media{% if has_first_media %} banner__media-half{% endif %}">
          <use-animate data-animate="zoom-fade" class="media-wrapper">
            <div class="image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
              
              {%- if section.settings.video_2 != blank -%}
                {%- comment -%} Display second video if available {%- endcomment -%}
                <video 
                  class="media__video"
                  autoplay 
                  muted 
                  loop 
                  playsinline
                  {% if section.settings.video_controls %}controls{% endif %}
                  style="width: 100%; height: 100%; object-fit: cover; object-position: {{ section.settings.image_position }};"
                >
                  <source src="{{ section.settings.video_2 | file_url }}" type="video/mp4">
                  {% comment %} Fallback image if video doesn't load {% endcomment %}
                  {%- if section.settings.image_2 != blank -%}
                    {{ section.settings.image_2 | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'image-fit', style: 'width: 100%; height: 100%; object-fit: cover;' }}
                  {%- endif -%}
                </video>
                
              {%- elsif section.settings.image_2 != blank -%}
                {%- comment -%} Display second image if no video {%- endcomment -%}
                {%-liquid
                  assign image_2nd = section.settings.image_2
                  assign image_class_2nd = 'image-fit'
                  if has_first_media
                    assign image_class_2nd = image_class_2nd | append: ' banner__media-image-half'
                  endif
                  if has_first_media and section.settings.stack_images_on_mobile
                    assign sizes_2nd = stacked_sizes
                  elsif has_first_media
                    assign sizes_2nd = half_width
                  else
                    assign sizes_2nd = full_width
                  endif

                  echo image_2nd | image_url: width: 1500 | image_tag: loading: 'lazy', class: image_class_2nd, sizes: sizes_2nd, widths: widths, is: 'lazy-image'
                -%}
              {%- endif -%}
            </div>
          </use-animate>
        </div>
      {%- endif -%}
      
      {%- if section.blocks.size > 0 -%}
        <div class="banner__content banner__content--{{ section.settings.text_box_position }} page-width{% if section.settings.mobile_text_background_enabled and section.settings.show_text_below %} banner__content--mobile-bg{% endif %}">
          <div class="banner__box {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }}{% if section.settings.limit_text_width %} banner__box--limited-width{% endif %}">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'heading' -%}
                  <{{ block.settings.heading_tag }} class="banner__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>{{ block.settings.heading | escape }}</{{ block.settings.heading_tag }}>
                {%- when 'subheading' -%}
                  <p class="banner__subheading{% if block.settings.secondary_color %} banner__subheading--colored{% endif %} {{ block.settings.subheading_size }}" {{ block.shopify_attributes }}>{{ block.settings.subheading | escape }}</p>
                {%- when 'text' -%}
                  <div class="banner__text{% if block.settings.secondary_color %} banner__text--colored{% endif %} {{ block.settings.text_size }} rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                {%- when 'custom_liquid' -%}
                  <div class="banner__text rte" {{ block.shopify_attributes }}>{{ block.settings.custom_liquid }}</div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    {%- if block.settings.button_style_secondary -%}
                      <a class="button button--cta button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank %} href="{{ shop.url }}{{ block.settings.button_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                        <span class="label">{{ block.settings.button_label | escape }}</span>
                        {% render 'icon', icon: 'arrow' %}
                      </a>
                    {%- else -%}
                      <a class="button button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank %} href="{{ shop.url }}{{ block.settings.button_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                        {{ block.settings.button_label | escape }}
                      </a>
                    {%- endif -%}
                  {%- elsif section.blocks.size == 1 and block.settings.button_link != blank -%}
                    </div>
                    <div>
                      <a class="full-unstyled-link" href="{{ shop.url }}{{ block.settings.button_link }}" {{ block.shopify_attributes }}></a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  {% if section.settings.rounded_corner %}
    #Banner-{{ section.id }} .banner__media {
      border-radius: 20px;
    }

    #Banner-{{ section.id }} {
      border-radius: 20px;
      overflow: hidden;
    }
  {% endif %}
  
  /* Video specific styles */
  #Banner-{{ section.id }} .media__video {
    border-radius: {% if section.settings.rounded_corner %}20px{% else %}0{% endif %};
  }

  /* Text width limitation styles */
  {% if section.settings.limit_text_width %}
    #Banner-{{ section.id }} .banner__box--limited-width {
      max-width: var(--text-box-max-width);
      width: 100%;
    }

    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }} .banner__box--limited-width {
        max-width: var(--text-box-max-width-mobile);
      }
    }
  {% endif %}

  /* Mobile text background styles */
  {% if section.settings.mobile_text_background_enabled %}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}.banner--mobile-text-bg .banner__content--mobile-bg {
        background: var(--mobile-text-background);
        background-color: rgb(var(--mobile-text-background-rgb));
        padding: 3rem 2rem;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        {% if section.settings.mobile_text_background_rounded %}
          border-radius: 0 0;
        {% endif %}
      }
      
      #Banner-{{ section.id }}.banner--mobile-text-bg .banner__box {
        width: 100%;
        max-width: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      /* Override text width limitation on mobile when mobile text background is enabled */
      {% if section.settings.limit_text_width %}
        #Banner-{{ section.id }}.banner--mobile-text-bg .banner__box--limited-width {
          max-width: var(--text-box-max-width-mobile);
        }
      {% endif %}

      #Banner-{{ section.id }}.banner--mobile-text-bg .banner__box * {
        text-align: center;
      }

      #Banner-{{ section.id }}.banner--mobile-text-bg .banner__box .button {
        margin: 0 auto;
        margin-top: 2rem;
      }

      /* Ensure the content area matches image width */
      #Banner-{{ section.id }}.banner--mobile-text-bg .banner__content--mobile-bg.page-width {
        max-width: none;
        width: 100%;
        margin: 0;
      }

      /* When banner has rounded corners and mobile text background */
      {% if section.settings.rounded_corner and section.settings.mobile_text_background_rounded %}
        #Banner-{{ section.id }}.banner--mobile-text-bg {
          overflow: hidden;
        }
      {% endif %}
    }
  {% endif %}
</style>

