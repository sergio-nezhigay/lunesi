    setupCartTrigger() {
      const desktopTrigger = document.getElementById('desktop-cart-trigger');
      const mobileTrigger = document.getElementById('mobile-cart-trigger');

      if (desktopTrigger && mobileTrigger) {
        desktopTrigger.addEventListener('click', () => {
          mobileTrigger.click();
        });
      }

      this.setupOverlayClose();
      this.updateCartCounter();
      setInterval(() => {
        this.updateCartCounter();
      }, 3000);
    }

    setupOverlayClose() {
      const cartContainer = document.querySelector('.cart-drawer-container');
      if (cartContainer) {
        cartContainer.addEventListener('click', (e) => {
          if (e.target === cartContainer && cartContainer.hasAttribute('open')) {
            const summary = cartContainer.querySelector('summary');
            if (summary) {
              summary.click();
            }
          }
        });
      }
    }

