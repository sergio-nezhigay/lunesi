.cart-drawer-container[open]::before {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  content: '';
  background: rgba(var(--color-foreground), 0.5);
  opacity: 1;
  transition: opacity 400ms cubic-bezier(.29, .63, .44, 1);
}

.cart-drawer {
  position: fixed;
  z-index: 3;
  transition: transform 300ms cubic-bezier(.29, .63, .44, 1);
}

.cart-drawer-container details[open] .cart-drawer {
  transform: translateX(0);
}

.cart-drawer-container details:not([open]) .cart-drawer {
  transform: translateX(100%);
}

.cart-drawer__close,
.cart-drawer__header .cart-drawer__close-button,
.cart-drawer .drawer__close-button,
.drawer__close,
.drawer__close button,
