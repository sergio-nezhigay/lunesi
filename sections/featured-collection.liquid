          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% if enable_slider %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var slider = document.getElementById('fc-slider-{{ section.id }}');
      var prevBtn = document.getElementById('fc-prev-{{ section.id }}');
      var nextBtn = document.getElementById('fc-next-{{ section.id }}');
      var controlsContainer = document.querySelector('.fc-slider-wrapper-outer .fc-slider-controls');

      if (!slider || !prevBtn || !nextBtn) return;

      var slideItems = slider.querySelectorAll('.fc-slide-item');
      var currentIndex = 0;

      function forceStyleRecalculation() {
        slideItems.forEach(function(item) {
          item.style.transform = 'translateZ(0)';
        });
      }

      function updateSlideWidths() {
        var sliderContainer = slider.parentElement; // fc-slider-container
        var containerWidth = sliderContainer.offsetWidth;
        var slideWidth;
        
        // На десктопі завжди 3 продукти в рядок
        if (window.innerWidth >= 750) {
          slideWidth = containerWidth / 3;
        } else {
          // Мобільна логіка (залишається як була)
          var slideCount = slideItems.length;
          var padding = 30;
          var maxSlideWidth = 400;
          var minSlideWidth = 280;
          var idealSlideWidth = containerWidth / Math.ceil(containerWidth / (maxSlideWidth + padding));
          idealSlideWidth = Math.max(minSlideWidth + padding, Math.min(maxSlideWidth + padding, idealSlideWidth));
          var visibleCount = Math.floor(containerWidth / idealSlideWidth);
          slideWidth = containerWidth / visibleCount;
        }

        slideItems.forEach(function(item) {
          item.style.flexBasis = slideWidth + 'px';
          item.style.width = slideWidth + 'px';
        });

        return slideWidth;
      }

      function updateButtonStates() {
        var sliderContainer = slider.parentElement; // fc-slider-container
        var containerWidth = sliderContainer.offsetWidth;
        var slideWidth = updateSlideWidths();
        var visibleCount;
        
        if (window.innerWidth >= 750) {
          visibleCount = 3; // На десктопі завжди 3
        } else {
          visibleCount = Math.floor(containerWidth / slideWidth);
        }
        
        var maxIndex = Math.max(0, slideItems.length - visibleCount);

        if (currentIndex <= 0) {
          prevBtn.disabled = true;
          prevBtn.setAttribute('aria-disabled', 'true');
        } else {
          prevBtn.disabled = false;
          prevBtn.setAttribute('aria-disabled', 'false');
        }

        if (currentIndex >= maxIndex) {
          nextBtn.disabled = true;
          nextBtn.setAttribute('aria-disabled', 'true');
        } else {
          nextBtn.disabled = false;
          nextBtn.setAttribute('aria-disabled', 'false');
        }
      }

      function updateSlider() {
        var slideWidth = updateSlideWidths();
        var sliderContainer = slider.parentElement; // fc-slider-container
        var totalContentWidth = slideItems.length * slideWidth;
        var containerWidth = sliderContainer.offsetWidth;

        if (controlsContainer) {
          controlsContainer.style.display = totalContentWidth > containerWidth ? 'flex' : 'none';
        }

        var visibleCount;
        if (window.innerWidth >= 750) {
          visibleCount = 3;
        } else {
          visibleCount = Math.floor(containerWidth / slideWidth);
        }
        
        var maxIndex = Math.max(0, slideItems.length - visibleCount);

        if (currentIndex > maxIndex) {
          currentIndex = maxIndex;
        }

        var translateValue = -currentIndex * slideWidth;
        slider.style.transform = 'translateX(' + translateValue + 'px)';

        updateButtonStates();
        setTimeout(forceStyleRecalculation, 50);
      }

      nextBtn.addEventListener('click', function() {
        if (nextBtn.disabled) return;
        
        var sliderContainer = slider.parentElement; // fc-slider-container
        var containerWidth = sliderContainer.offsetWidth;
        var slideWidth = updateSlideWidths();
        var visibleCount;
        
        if (window.innerWidth >= 750) {
          visibleCount = 3;
        } else {
          visibleCount = Math.floor(containerWidth / slideWidth);
        }
        
        var maxIndex = Math.max(0, slideItems.length - visibleCount);
        
        if (currentIndex < maxIndex) {
          currentIndex++;
          updateSlider();
        }
      });

      prevBtn.addEventListener('click', function() {
        if (prevBtn.disabled) return;
        
        if (currentIndex > 0) {
          currentIndex--;
          updateSlider();
        }
      });

      window.addEventListener('resize', function() {
        setTimeout(updateSlider, 100);
      });

      updateSlider();
      forceStyleRecalculation();
    });

document.addEventListener('DOMContentLoaded', function() {
  var sessionKey = 'swipe-used-global';
  
  function findProductGridSliders() {
    var sliders = document.querySelectorAll('.product-grid.slider');
    return Array.from(sliders);
  }
  
  function hideSwipeIndicator() {
    var sliders = findProductGridSliders();
    
    sliders.forEach(function(slider) {
      slider.classList.add('swipe-used');
    });
    
    document.body.classList.add('swipe-used-global');
    sessionStorage.setItem(sessionKey, 'true');
    addSwipeHideCSS();
  }
  
  function addSwipeHideCSS() {
    var styleId = 'swipe-hide-css';
    var existingStyle = document.getElementById(styleId);
    
    if (existingStyle) {
      existingStyle.remove();
    }
    
    var css = `
      .product-grid.slider.swipe-used li:first-child::after,
      .product-grid.slider.swipe-used li:first-child:after {
        display: none !important;
        opacity: 0 !important;
        content: none !important;
        visibility: hidden !important;
      }
      
      html body .product-grid.slider.swipe-used li:first-child::after,
      html body .product-grid.slider.swipe-used li:first-child:after {
        display: none !important;
        opacity: 0 !important;
        content: none !important;
        visibility: hidden !important;
      }
      
      body.swipe-used-global .product-grid.slider li:first-child::after,
      body.swipe-used-global .product-grid.slider li:first-child:after {
        display: none !important;
        opacity: 0 !important;
        content: none !important;
        visibility: hidden !important;
      }
      
      .swipe-used.product-grid.slider li:first-child::after,
      .swipe-used.product-grid.slider li:first-child:after,
      ul.swipe-used.product-grid.slider li:first-child::after,
      ul.swipe-used.product-grid.slider li:first-child:after {
        display: none !important;
        opacity: 0 !important;
        content: none !important;
        visibility: hidden !important;
      }
    `;
    
    var style = document.createElement('style');
    style.id = styleId;
    style.textContent = css;
    document.head.appendChild(style);
  }
  
  function setupTouchTracking() {
    var sliders = findProductGridSliders();
    
    if (sliders.length === 0) {
      setTimeout(setupTouchTracking, 1000);
      return;
    }
    
    var startX, startY;
    var hasTriggered = false;
    
    function handleTouchStart(e) {
      startX = e.touches[0].clientX;
      startY = e.touches[0].clientY;
    }
    
    function handleTouchMove(e) {
      if (hasTriggered) return;
      
      var deltaX = Math.abs(e.touches[0].clientX - startX);
      var deltaY = Math.abs(e.touches[0].clientY - startY);
      
      if (deltaX > 25 && deltaX > deltaY * 1.2) {
        hasTriggered = true;
        hideSwipeIndicator();
      }
    }
    
    sliders.forEach(function(slider) {
      slider.addEventListener('touchstart', handleTouchStart, { passive: true });
      slider.addEventListener('touchmove', handleTouchMove, { passive: true });
    });
    
    document.addEventListener('touchstart', handleTouchStart, { passive: true });
    document.addEventListener('touchmove', handleTouchMove, { passive: true });
  }
  
  function init() {
    if (sessionStorage.getItem(sessionKey)) {
      hideSwipeIndicator();
    } else {
      setupTouchTracking();
    }
  }
  
  init();
});
  </script>
