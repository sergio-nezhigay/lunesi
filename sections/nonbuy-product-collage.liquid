{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{{ 'section-collage.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | times: 0.67 | round }}px, (min-width: 750px) 50rem, calc(100vw - 3rem){%- endcapture -%}

{%- liquid
  assign product_images = product.media | where: 'media_type', 'image'

  if section.settings.image_source == 'product' and product_images[0] != nil
    assign slot_1 = product_images[0].preview_image
  else
    assign slot_1 = section.settings.image_1
  endif

  if section.settings.image_source == 'product' and product_images[1] != nil
    assign slot_2 = product_images[1].preview_image
  else
    assign slot_2 = section.settings.image_2
  endif

  if section.settings.image_source == 'product' and product_images[2] != nil
    assign slot_3 = product_images[2].preview_image
  else
    assign slot_3 = section.settings.image_3
  endif
-%}

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="page-width">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper {{ section.settings.heading_alignment }}">
        <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</{{ section.settings.heading_tag }}>
      </div>
    {%- endunless -%}

    <div class="collage collage--{{ section.settings.desktop_layout }}{% if section.settings.mobile_layout == 'collage' %} collage--mobile{% endif %}">
      {% comment %}Slot 1{% endcomment %}
      <div class="collage__item collage__item--image collage__item--{{ section.settings.desktop_layout }}">
        <div class="collage-card">
          <a class="collage-content card-wrapper">
            <div class="card">
              <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                {%- if slot_1 != blank -%}
                  <div class="image-animate media media--adapt media--hover-effect"
                    style="--image-ratio-percent: {{ 1 | divided_by: slot_1.aspect_ratio | times: 100 }}%;"
                  >
                    {{ slot_1 | image_url: width: 3000 | image_tag:
                      loading: 'lazy',
                      class: 'collage-card__image',
                      sizes: sizes,
                      widths: '375, 750, 1100, 1500, 1780, 2000, 3000',
                      is: 'lazy-image'
                    }}
                  </div>
                {%- else -%}
                  <div class="image-animate media media--adapt" style="--image-ratio-percent: 100%;">
                    {{ 'image' | placeholder_svg_tag: 'placeholder collage-card__image' }}
                  </div>
                {%- endif -%}
              </use-animate>
            </div>
          </a>
        </div>
      </div>

      {% comment %}Slot 2{% endcomment %}
      <div class="collage__item collage__item--image collage__item--{{ section.settings.desktop_layout }}">
        <div class="collage-card">
          <a class="collage-content card-wrapper">
            <div class="card">
              <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                {%- if slot_2 != blank -%}
                  <div class="image-animate media media--adapt media--hover-effect"
                    style="--image-ratio-percent: {{ 1 | divided_by: slot_2.aspect_ratio | times: 100 }}%;"
                  >
                    {{ slot_2 | image_url: width: 3000 | image_tag:
                      loading: 'lazy',
                      class: 'collage-card__image',
                      sizes: sizes,
                      widths: '375, 750, 1100, 1500, 1780, 2000, 3000',
                      is: 'lazy-image'
                    }}
                  </div>
                {%- else -%}
                  <div class="image-animate media media--adapt" style="--image-ratio-percent: 100%;">
                    {{ 'image' | placeholder_svg_tag: 'placeholder collage-card__image' }}
                  </div>
                {%- endif -%}
              </use-animate>
            </div>
          </a>
        </div>
      </div>

      {% comment %}Slot 3{% endcomment %}
      <div class="collage__item collage__item--image collage__item--{{ section.settings.desktop_layout }}">
        <div class="collage-card">
          <a class="collage-content card-wrapper">
            <div class="card">
              <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                {%- if slot_3 != blank -%}
                  <div class="image-animate media media--adapt media--hover-effect"
                    style="--image-ratio-percent: {{ 1 | divided_by: slot_3.aspect_ratio | times: 100 }}%;"
                  >
                    {{ slot_3 | image_url: width: 3000 | image_tag:
                      loading: 'lazy',
                      class: 'collage-card__image',
                      sizes: sizes,
                      widths: '375, 750, 1100, 1500, 1780, 2000, 3000',
                      is: 'lazy-image'
                    }}
                  </div>
                {%- else -%}
                  <div class="image-animate media media--adapt" style="--image-ratio-percent: 100%;">
                    {{ 'image' | placeholder_svg_tag: 'placeholder collage-card__image' }}
                  </div>
                {%- endif -%}
              </use-animate>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Nonbuy Product Collage",
  "tag": "section",
  "class": "section collage-section",
  "settings": [
    {
      "type": "select",
      "id": "image_source",
      "label": "Image source",
      "options": [
        {
          "value": "product",
          "label": "Product images"
        },
        {
          "value": "editor",
          "label": "Editor images"
        }
      ],
      "default": "product",
      "info": "Product images: pulls from the product's media gallery. Editor images are used as fallback when the product has fewer than 3 images."
    },
    {
      "type": "header",
      "content": "Editor images (fallback)"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h0"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "HTML tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "p",
          "label": "Paragraph"
        }
      ],
      "default": "h2"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "Desktop focus",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "collage",
          "label": "Collage"
        },
        {
          "value": "column",
          "label": "Column"
        }
      ],
      "default": "collage"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "default": false,
      "label": "Show divider"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 36
    }
  ],
  "templates": ["product"]
}
{% endschema %}
