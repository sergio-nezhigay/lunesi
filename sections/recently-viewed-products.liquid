{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --image-position: {{ section.settings.image_position }};
    --card-max-width: {{ section.settings.card_max_width }}px;
  }
  
  /* Compact card styles */
  #shopify-section-{{ section.id }} .card-wrapper {
    max-width: var(--card-max-width);
    margin: 0 auto;
  }
  
  #shopify-section-{{ section.id }} .card-product {
    font-size: 0.85rem;
  }
  
  #shopify-section-{{ section.id }} .card__heading {
    font-size: 0.9rem;
    line-height: 1.2;
  }
  
  #shopify-section-{{ section.id }} .price {
    font-size: 0.85rem;
  }
  
  /* Reduce spacing */
  #shopify-section-{{ section.id }} .card__content {
    padding: 0.75rem 0.5rem;
  }
  
  /* Reduce gaps between cards */
  #shopify-section-{{ section.id }} .product-grid {
    gap: 0.5rem;
  }
  
  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .product-grid {
      gap: 0.75rem;
    }
  }
  
  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} .product-grid {
      gap: 1rem;
    }
  }

#shopify-section-{{ section.id }} .card-information__button {
  pointer-events: none;
  display: flex;
  justify-content: flex-end;
  column-gap: 1rem;
  text-align: center;
  position: absolute;
  bottom: 100%;
  z-index: 2;
  white-space: nowrap;
  height: 3.6rem !important;
  margin-top: 0;
  overflow: hidden;
  transform: translateY(-1.5rem);
  width: calc(100% - 3rem);
}


#shopify-section-{{ section.id }} .card-information__button .button {
  pointer-events: visible;
  text-indent: -9999px !important;
  flex: 0 0 auto !important;
  width: 3.6rem !important;
  min-width: auto !important;
  padding: 0 !important;
  box-shadow: none !important;
  height: 3.6rem !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  opacity: 1 !important;
}


#shopify-section-{{ section.id }} .card-information__button .button .icon {
  display: block !important;
  width: 1.6rem !important;
  height: 1.6rem !important;
  stroke-width: 1.2;
  text-indent: 0 !important;
}


#shopify-section-{{ section.id }} .card-information__button .countdown {
  display: none !important;
}


#shopify-section-{{ section.id }} .card-information__button .card__swatches {
  display: none !important;
}


@media screen and (hover: hover) and (min-width: 750px) {
  #shopify-section-{{ section.id }} .card-information__button {
    height: 3.6rem !important;
  }

  #shopify-section-{{ section.id }} .card-information__button .button {
    display: flex !important;
    min-width: auto !important;
    width: 3.6rem !important;
    box-shadow: none !important;
    opacity: 1 !important;
    text-indent: -9999px !important;
  }

  #shopify-section-{{ section.id }} .card-information__button .button .icon {
    display: block !important;
  }
}


#shopify-section-{{ section.id }} .card-wrapper:hover .card-information__button .button {
  opacity: 1 !important;
  width: 3.6rem !important;
  text-indent: -9999px !important;
}

#shopify-section-{{ section.id }} .card-wrapper:hover .card-information__button .countdown {
  opacity: 0 !important;
  display: none !important;
}


#shopify-section-{{ section.id }} .card-information__button.is-expanded {
  height: 3.6rem !important;
  width: calc(100% - 3rem) !important;
  max-width: none !important;
  transform: translateY(-1.5rem) !important;
}


@media screen and (hover: none) and (max-width: 1366px),
  screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .card-information__button .button {
    text-indent: -9999px !important;
    flex: 0 0 auto !important;
    width: 3.6rem !important;
    min-width: auto !important;
    padding: 0 !important;
    box-shadow: none !important;
  }
}
 #shopify-section-{{ section.id }} .img-det{
    display: none !important;
  } 
  
{%- endstyle -%}
    
<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-product-grid.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-recently-viewed-products.css' | asset_url }}" media="print" onload="this.media='all'">

{%- if settings.quick_view_enabled and section.settings.enable_quick_view -%}
  <link rel="stylesheet" href="{{ 'section-main-product.css' | asset_url }}" media="print" onload="this.media='all'">
  <link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

<noscript>{{ 'component-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-product-grid.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-recently-viewed-products.css' | asset_url | stylesheet_tag }}</noscript>

<recently-viewed-products class="recently-viewed-products" data-url="{{ routes.search_url }}?section_id={{ section.id }}&type=product&q="{% if request.page_type == 'product' %} data-product-id="{{ product.id }}"{% endif %}>
  {%- if request.page_type == 'search' and search.performed and search.results_count > 0 -%}
    <div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
      <div class="page-width">
        <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %} {{ section.settings.heading_alignment }}">
          <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</{{ section.settings.heading_tag }}>
        </div>
        
        {%- assign parsed_terms = search.terms | split: ' OR ' -%}
        {%- assign max_products = section.settings.max_products | default: 8 -%}
        
        <slider-component class="slider-mobile-gutter">
          <ul id="Slider-{{ section.id }}"
            class="product-grid grid{% if section.settings.columns_mobile == '1' %} grid--1-col-mobile{% endif %} grid--{{ section.settings.columns_mobile }}-col grid--{{ section.settings.columns_tablet }}-col-tablet grid--{{ section.settings.products_per_row }}-col-desktop{% if section.settings.swipe_on_mobile %} slider slider--tablet{% endif %} slider--tablet-up"
            role="list"
          >
            {%- assign products_shown = 0 -%}
            {%- for parsed_term in parsed_terms -%}
              {%- if products_shown >= max_products -%}
                {%- break -%}
              {%- endif -%}
              {%- assign id = parsed_term | split: 'id:' | last | times: 1 -%}
              {%- for product in search.results -%}
                {%- if product.id == id and products_shown < max_products -%}
                  <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item">
                    <div class="card-wrapper">
                      {% render 'card-product',
                        card_product: product,
                        card_collection: collection,
                        media_size: section.settings.image_ratio,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_quick_buy: section.settings.show_quick_buy,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        enable_quick_view: section.settings.enable_quick_view,
                        enable_color_swatches: section.settings.enable_color_swatches,
                        enable_countdown: section.settings.enable_countdown,
                        enable_image_fill: section.settings.enable_image_fill,
                        button_style: section.settings.button_style
                      %}
                    </div>
                  </li>
                  {%- assign products_shown = products_shown | plus: 1 -%}
                  {%- break -%}
                {%- endif -%}
              {%- endfor -%}
            {%- endfor -%}
          </ul>
        </slider-component>
      </div>
    </div>
  {%- endif -%}
</recently-viewed-products>

