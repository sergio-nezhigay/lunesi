<style>
  .page-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .page-404 .title + * {
      margin-top: 2rem;
    }
  }

  /* Description text */
  .page-404__description {
    margin-top: 1rem;
    color: rgb(var(--color-foreground) / 0.75);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Navigation links styling */
  .page-404__navigation {
    margin-top: 3rem;
    padding: 2rem 0;
    border-top: 1px solid rgb(var(--color-foreground) / 0.1);
    border-bottom: 1px solid rgb(var(--color-foreground) / 0.1);
  }

  .page-404__nav-section {
    margin-bottom: 2rem;
  }

  .page-404__nav-section:last-child {
    margin-bottom: 0;
  }

  .page-404__nav-heading {
    font-size: 1.2rem;
    font-weight: 500;
    margin-bottom: 1rem;
    color: rgb(var(--color-foreground));
  }

  .page-404__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .page-404__nav-list li {
    margin: 0;
  }

  .page-404__nav-link {
    color: rgb(var(--color-foreground));
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid rgb(var(--color-foreground) / 0.2);
    border-radius: 0.25rem;
    display: inline-block;
    transition: all 0.2s ease;
    font-size: 0.95rem;
  }

  .page-404__nav-link:hover {
    background-color: rgb(var(--color-foreground) / 0.05);
    border-color: rgb(var(--color-foreground) / 0.4);
  }

  .page-404__cta {
    margin-top: 2rem;
  }

  @media screen and (max-width: 749px) {
    .page-404__navigation {
      margin-top: 2rem;
      padding: 1.5rem 0;
    }

    .page-404__nav-section {
      margin-bottom: 1.5rem;
    }

    .page-404__nav-heading {
      font-size: 1.1rem;
    }

    .page-404__nav-list {
      gap: 0.75rem;
    }

    .page-404__nav-link {
      font-size: 0.9rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>

<div class="page-404 page-width page-margin center">
  <div class="h0">
    {{ 'templates.404.subtext' | t }}
  </div>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <p class="page-404__description">
    The page you're looking for might have been moved or doesn't exist. Here are some helpful links to get you back on track:
  </p>

  {%- comment -%} Navigation Links Section {%- endcomment -%}
  <div class="page-404__navigation">
    {%- comment -%} Main Menu Links {%- endcomment -%}
    {%- if linklists['main-menu'] and linklists['main-menu'].links.size > 0 -%}
      <div class="page-404__nav-section">
        <h2 class="page-404__nav-heading">Explore Our Site</h2>
        <ul class="page-404__nav-list">
          {%- for link in linklists['main-menu'].links limit: 5 -%}
            <li>
              <a href="{{ link.url }}" class="page-404__nav-link">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}

    {%- comment -%} Featured Product {%- endcomment -%}
    <div class="page-404__nav-section">
      <h2 class="page-404__nav-heading">Featured Product</h2>
      <ul class="page-404__nav-list">
        <li>
          <a href="/products/illuminating-leave" class="page-404__nav-link">
            Illuminating Leave-In
          </a>
        </li>
      </ul>
    </div>

    {%- comment -%} Popular Collections {%- endcomment -%}
    <div class="page-404__nav-section">
      <h2 class="page-404__nav-heading">Popular Collections</h2>
      <ul class="page-404__nav-list">
        <li>
          <a href="{{ routes.collections_url }}/main-collection" class="page-404__nav-link">
            All Products
          </a>
        </li>
        <li>
          <a href="{{ routes.collections_url }}/bundles" class="page-404__nav-link">
            Bundles
          </a>
        </li>
      </ul>
    </div>

    {%- comment -%} Help & Support {%- endcomment -%}
    <div class="page-404__nav-section">
      <h2 class="page-404__nav-heading">Need Help?</h2>
      <ul class="page-404__nav-list">
        {%- if pages['contact'] -%}
          <li>
            <a href="{{ pages['contact'].url }}" class="page-404__nav-link">
              Contact Us
            </a>
          </li>
        {%- endif -%}
        <li>
          <a href="{{ routes.all_products_collection_url }}" class="page-404__nav-link">
            Browse All Products
          </a>
        </li>
      </ul>
    </div>
  </div>

  <div class="page-404__cta">
    <a href="{{ routes.all_products_collection_url }}" class="button button--tertiary">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
</div>
