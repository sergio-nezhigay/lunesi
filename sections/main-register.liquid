{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}
{% comment %} <form id="create_customer" accept-charset="UTF-8" method="post" action="/account">
  <input type="hidden" name="form_type" value="create_customer">
  <input type="hidden" name="utf8" value="✓">

  <label for="FirstName">Ім'я</label>
  <input type="text" name="customer[first_name]" id="FirstName">

  <label for="LastName">Прізвище</label>
  <input type="text" name="customer[last_name]" id="LastName">

  <label for="Email">Електронна пошта</label>
  <input type="email" name="customer[email]" id="Email" required>
  <div id="email-error" style="color:red; display:none;">Email is invalid.</div>

  <label for="Password">Пароль (мінімум 5 символів)</label>
  <input type="password" name="customer[password]" id="Password" required>
  <div id="password-error" style="color:red; display:none;">Password is too short (minimum is 5 characters).</div>

  <button type="submit" id="submitBtn">Зареєструватися</button>
</form>

<script>
const form = document.getElementById('create_customer');
const email = document.getElementById('Email');
const password = document.getElementById('Password');
const emailError = document.getElementById('email-error');
const passwordError = document.getElementById('password-error');

form.addEventListener('submit', function(e) {
  let valid = true;

  // Перевірка пароля
  if (password.value.length < 5) {
    passwordError.style.display = 'block';
    valid = false;
  } else {
    passwordError.style.display = 'none';
  }

  // Перевірка email
  const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailPattern.test(email.value)) {
    emailError.style.display = 'block';
    valid = false;
  } else {
    emailError.style.display = 'none';
  }

  // Якщо є помилки, зупиняємо відправку
  if (!valid) {
    e.preventDefault(); // не оновлюємо сторінку
  }
  // Якщо valid = true, браузер відправляє форму як зазвичай
});
</script>
 {% endcomment %}
<div class="customer register page-width section--padding">
  <h1 class="h2">{{ 'customer.register.title' | t }}</h1>
  <form-state>
    {%- form 'create_customer' -%}
      {%- if form.errors contains 'form' -%}
        <div class="form__message errors" tabindex="-1" autofocus>
          {% render 'icon', icon: 'error' %}
          <div class="rte">{{ form.errors.messages['form'] }}</div>
        </div>
      {%- endif -%}
      <div class="field">      
        <input
          type="text"
          name="customer[first_name]"
          id="RegisterForm-FirstName"
          {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
          autocomplete="given-name"
          placeholder="{{ 'customer.register.first_name' | t }}"
        >
        <label class="visually-hidden" for="RegisterForm-FirstName">{{ 'customer.register.first_name' | t }}</label>
      </div>
      <div class="field">
        <input
          type="text"
          name="customer[last_name]"
          id="RegisterForm-LastName"
          {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
          autocomplete="family-name"
          placeholder="{{ 'customer.register.last_name' | t }}"
        >
        <label class="visually-hidden" for="RegisterForm-LastName">{{ 'customer.register.last_name' | t }}</label>
      </div>
      <div class="field">      
        <input
          required="required"
          class="required{% if form.errors contains 'email' %} invalid{% endif %}"
          type="email"
          name="customer[email]"
          id="RegisterForm-email"
          {% if form.email %} value="{{ form.email }}"{% endif %}
          spellcheck="false"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-email-error"
          {% endif %}
          placeholder="{{ 'customer.register.email' | t }}"
        >
        <label class="visually-hidden" for="RegisterForm-email">{{ 'customer.register.email' | t }}</label>
      </div>
      {%- if form.errors contains 'email' -%}
        <span id="RegisterForm-email-error" class="form__message errors">
          {% render 'icon', icon: 'error' %}
          {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.
        </span>
      {%- endif -%}
      <div class="field">     
        <input
          required="required"
          class="required{% if form.errors contains 'password' %} invalid{% endif %}"
          type="password"
          name="customer[password]"
          id="RegisterForm-password"
          aria-required="true"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-password-error"
          {% endif %}
          placeholder="{{ 'customer.register.password' | t }}"
        >
        <label class="visually-hidden" for="RegisterForm-password">{{ 'customer.register.password' | t }}</label>
      </div>
      {%- if form.errors contains 'password' -%}
        <span id="RegisterForm-password-error" class="form__message errors">
          {% render 'icon', icon: 'error' %}
          {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}.
        </span>
      {%- endif -%}

      <button class="button" type="submit">
        {{ 'customer.register.submit' | t }}
      </button>

      <a class="link link--underline" href="{{ routes.root_url }}">
        {{ 'customer.register.return' | t }}
      </a>
    {%- endform -%}
  </form-state>
</div>
<div id="error-icon" style="display:none;">
  {% render 'icon', icon: 'error' %}
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const form = document.querySelector('form[action="/account"]');
  if (!form) return;

  const errorIcon = document.querySelector("#error-icon").innerHTML;

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    e.stopImmediatePropagation();

    form.querySelectorAll(".js-error").forEach(el => el.remove());
    form.querySelectorAll(".invalid").forEach(el => {
      el.classList.remove("invalid");
      el.removeAttribute("aria-invalid");
    });

    let hasError = false;

    const email = form.querySelector('input[name="customer[email]"]');
    const password = form.querySelector('input[name="customer[password]"]');

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/;

    // EMAIL ERROR
    if (!email.value || !emailRegex.test(email.value)) {
      showError(email, `${errorIcon} Email is invalid.`);
      hasError = true;
    }

    // PASSWORD ERROR
    if (!password.value || password.value.length < 6) {
      showError(password, `${errorIcon} Password is too short (minimum is 6 characters).`);
      hasError = true;
    }

    if (hasError) return;

    form.submit();
  }, true);

  function showError(input, message) {
    const span = document.createElement("span");
    span.className = "form__message errors js-error";
    span.innerHTML = message;

    input.classList.add("invalid");
    input.setAttribute("aria-invalid", "true");

    input.parentNode.insertAdjacentElement("afterend", span);
  }
});
</script>




