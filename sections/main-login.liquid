{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
  }
  
  /* Нові стилі для імітації дизайну LUNESI */
  .customer.login {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
    background-color: transparent;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
  }
  
  .login-image-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    aspect-ratio: 1/1;
    border-radius: 20px 0 0 20px;
  }
  
  .login-image-container img {
    max-width: none;
    max-height: none;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  
  .login-forms-container {
    flex: 1;
    padding: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: {{ section.settings.forms_bg_color | default: '#f9f9f9' }};
    border-radius: 0 20px 20px 0;
  }
  
  .login-forms-container h1 {
    font-size: 38px;
    margin-bottom: 30px;
    font-weight: normal;
    color: #333;
    text-align: center;
  }
  
  .login-forms-container .field {
    margin-bottom: 20px;
  }
  
  .login-forms-container input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 16px;
  }
  
  .login-forms-container .button {
    background-color: transparent;
    color: #333;
    border: 1px solid #333;
    border-radius: 50px;
    padding: 10px 35px;
    font-size: 14px;
    cursor: pointer;
    margin-top: 10px;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  
  .login-forms-container .button:hover {
    background-color: #E6CEDF;
    color: #fff;
    border: 0;
  }
  
  /* Стилі для посилань */
  .login-forms-container a {
    color: #777;
    text-decoration: none;
    font-size: 14px;
    display: inline-block;
    margin-top: 5px;
  }
  
  .login-forms-container a:hover {
    text-decoration: underline;
  }
  
  /* Перезаписуємо стандартні стилі для .link та .link--underline */
  .login-forms-container .link, 
  .login-forms-container .link--underline {
    text-decoration: none;
  }
  
  .login-forms-container .link:hover, 
  .login-forms-container .link--underline:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
  }

  #recover-form {
    display: none;
  }
  
  #recover-form.active {
    display: block;
  }
  
  #login-form {
    display: block;
  }
  
  #login-form.hidden {
    display: none;
  }
  
  .login-links {
    margin-top: 20px;
    text-align: center;
    font-size: 14px;
  }
  
  /* Для кращого вигляду на мобільних пристроях */
  @media screen and (max-width: 768px) {
    .customer.login {
      flex-direction: column;
    }
    
    .login-image-container {
      width: 100%;
      height: 300px;
      border-radius: 20px 20px 0 0;
    }
    
    .login-forms-container {
      padding: 30px 20px;
      border-radius: 0 0 20px 20px;
    }
  }
{%- endstyle -%}

<div class="customer login page-width">
  <div class="login-image-container">
    {% if section.settings.login_image %}
      <img src="{{ section.settings.login_image | image_url: width: 1500, height: 1500 }}" alt="Фото для логіну" class="login-image">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'login-image placeholder' }}
    {% endif %}
  </div>
  
  <div class="login-forms-container">
    <div id="recover-form">
      <h1>{{ 'customer.recover_password.title' | t }}</h1>
      <p>{{ 'customer.recover_password.subtext' | t }}</p>

      {%- form 'recover_customer_password' -%}
        {% assign recover_success = form.posted_successfully? %}
        <div class="field">
          <input
            required="required"
            class="required{% if form.errors %} invalid{% endif %}"
            type="email"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="RecoverEmail-email-error"
              autofocus
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t }}"
          >
        </div>
        {%- if form.errors -%}
          <small id="RecoverEmail-email-error" class="form__message errors">
            {% render 'icon', icon: 'error' %}
            {{ form.errors.messages['form'] }}
          </small>
        {%- endif -%}

        <button class="button" type="submit">
          {{ 'customer.login_page.submit' | t }}
        </button>

        <div class="login-links">
          <a href="#" onclick="showLoginForm(); return false;">
            {{ 'customer.login_page.cancel' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>

    <div id="login-form">
      <h1>Login</h1>
      
      {%- if recover_success == true -%}
        <small class="form__message success" tabindex="-1" autofocus>
          {% render 'icon', icon: 'success' %}
          {{ 'customer.recover_password.success' | t }}
        </small>
      {%- endif -%}
      
      {%- form 'customer_login' -%}
        {%- if form.errors -%}
          <p>
            <small class="form__message errors" tabindex="-1" autofocus>
              {% render 'icon', icon: 'error' %}
              {{ form.errors.messages['form'] }}
            </small>
          </p>
        {%- endif -%}
        
        <div class="field">        
          <input
            required="required"
            class="required{% if form.errors contains 'form' %} invalid{% endif %}"
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="Email"
          >
        </div>

        {%- if form.password_needed -%}
          <div class="field">          
            <input
              required="required"
              class="required{% if form.errors contains 'form' %} invalid{% endif %}"
              type="password"
              value=""
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="Password"
            >
          </div>
        {%- endif -%}

        <button class="button" type="submit">SIGN IN</button>
        
        <div class="login-links">
          <a href="#" onclick="showRecoverForm(); return false;">
            Forgot your password?
          </a>
          <p>Don't have an account? <a href="{{ routes.account_register_url }}">Sign up!</a></p>
        </div>
      {%- endform -%}
    </div>
  
    {%- if shop.checkout.guest_login -%}
      <div class="guest-login" style="display: none;">
        <hr>
        <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

        {%- form 'guest_login' -%}
          <button class="button" type="submit">
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  function showRecoverForm() {
    document.getElementById('recover-form').classList.add('active');
    document.getElementById('login-form').classList.add('hidden');
  }
  
  function showLoginForm() {
    document.getElementById('recover-form').classList.remove('active');
    document.getElementById('login-form').classList.remove('hidden');
  }
</script>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.header.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_top.unit",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_bottom.unit",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    },
    {
      "type": "image_picker",
      "id": "login_image",
      "label": "Image for login page",
      "info": "Recommended size 1000x1000 pixels, square image"
    },
    {
      "type": "color",
      "id": "forms_bg_color",
      "label": "Forms background color",
      "default": "#f9f9f9"
    }
  ]
}
{% endschema %}