  .button--secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(128, 128, 128, 0.4),
      transparent
    );
    opacity: 0;
    transition: none;
  }

  .button--secondary:hover::before {
    opacity: 1;
    animation: shine 0.6s ease-out;
  }

  @keyframes shine {
    0% { left: -100%; }
    100% { left: 100%; }
  }
  .button--secondary:hover::before {
