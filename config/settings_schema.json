  {
    "name": "Tax Messages",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure tax and shipping messages displayed in cart drawer and cart page. Messages are based on customer location and cart total thresholds."
      },
      {
        "type": "textarea",
        "id": "tax_note",
        "label": "Tax\/Shipping note (Legacy)",
        "default": "Taxes and shipping calculated at checkout.",
        "info": "Legacy fallback setting. Only used if 'Default tax message' below is empty."
      },
      {
        "type": "header",
        "content": "GB (United Kingdom) Messages"
      },
      {
        "type": "textarea",
        "id": "cart_tax_gb_message",
        "default": "Tax included. Shipping calculated at checkout.",
        "label": "GB tax message",
        "info": "Message shown to customers in Great Britain (any cart total)."
      },
      {
        "type": "header",
        "content": "EU Countries Messages"
      },
      {
        "type": "text",
        "id": "cart_tax_eu_threshold",
        "default": "EUR:150",
        "label": "EU threshold (Currency:Amount)",
        "info": "Comma-separated list of thresholds. Example: 'EUR:150,SEK:1750,DKK:1120'. Falls back to EUR or first number found."
      },
      {
        "type": "textarea",
        "id": "cart_tax_eu_below_threshold_message",
        "default": "Tax included. International duties may apply. Shipping calculated at checkout.",
        "label": "EU message (below threshold)",
        "info": "Message shown to EU customers when cart total is below the threshold."
      },
      {
        "type": "textarea",
        "id": "cart_tax_eu_above_threshold_message",
        "default": "Tax excluded. International duties may apply. Shipping calculated at checkout.",
        "label": "EU message (above threshold)",
        "info": "Message shown to EU customers when cart total exceeds the threshold."
      },
      {
        "type": "header",
        "content": "Non-EU Countries Messages"
      },
      {
        "type": "number",
        "id": "cart_tax_non_eu_threshold",
        "default": 50,
        "label": "Non-EU threshold (EUR)",
        "info": "Show custom tax message for non-EU countries when cart total exceeds this amount."
      },
